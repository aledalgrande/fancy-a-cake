	%head
		%title Unique cake
		%script{:type => 'text/javascript', :src => "http://use.typekit.com/gar7vtm.js"}
		%script{:type => 'text/javascript'} try{Typekit.load(); google.load("jquery", "1.5.1");}catch(e){}
